{
    "appId": "com.compute.app",
    "compression": "maximum",
    "directories": {
        "output": "dist"
    },
    "win": {
        "target": "msi",
        "icon": "src/renderer/assets/vite.ico"
    },
    "linux":  {
        "target": ["snap"]
    },
    "files": [
        {
            "from": "build/main",
            "to": "main",
            "filter": ["**/*"]
        },
        {
            "from": "build/renderer",
            "to": "renderer",
            "filter": ["**/*"]
        },
        {
            "from": "src/main/static",
            "to": "static",
            "filter": ["**/*"]
        },
        "!.git",
        "!.github",
        "!build",
        "!dist",
        "!docs",
        "!ply_tool",
        "!scripts"
    ]
}
